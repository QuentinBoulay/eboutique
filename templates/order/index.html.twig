{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class="page-content container">
        <h1>Order index</h1>

        <table class="table-list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>OrderNumber</th>
                    <th>Valid</th>
                    <th>DateTime</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{ order.id }}</td>
                    <td>{{ order.orderNumber }}</td>
                    <td>{{ order.valid ? 'Yes' : 'No' }}</td>
                    <td>{{ order.dateTime ? order.dateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                        <a href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_order_new') }}">Create new</a>
    </div>
{% endblock %}
