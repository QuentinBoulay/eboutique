    <div class="content-product">
        <figure>
            <img src="../uploads/{{ product.media }}" alt="{{ product.name }}">
        </figure>
        <div class="infos">
            <div class="infos-head">
                <h3>{{ product.name }}</h3>
                <p class="price">{{ product.priceHT }}â‚¬</p>
