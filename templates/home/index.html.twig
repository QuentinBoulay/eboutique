{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .listing-products {
        margin-top: 30px;
        display: flex;
        flex-wrap: wrap;
    }

    .listing-products h2 {
        width: 100%;
        margin-bottom: 20px;
    }

    .listing-products a {
        text-decoration: none;
        color: #fff;
        background-color: #000;
        padding: 20px;
        margin: 10px;
        flex: 1 1 300px;
        position: relative;
        transition: all 0.3s;
        overflow: hidden;
    }

    .listing-products a:hover figure img {
        tarnsform: scale(1.1);
    }

    .listing-products .content-product figure {
        width: 100%;
        height: 200px;
        overflow: hidden;
    }

    .listing-products .content-product .infos {
        position: absolute;
        bottom: 0;
        left: 0;
        padding: 20px;
        width: 100%;
        background-color: #fff;
        color: #000;
    }

    .listing-products .content-product .price {
        font-weight: bold;
        text-align: right;
        margin-top: 5px;
    }

    .listing-products .content-product .description {
        margin: 10px 0 5px 0;
    }
</style>

<div class="page-content container">
    <h1>HomePage</h1>

    <div class="listing-products">
        <h2>Produits disponibles</h2>
        {% for product in products %}
            {% if product.available %}
                <a href="{{ path('app_product_show', { 'id' : product.id }) }}">
                    <div class="content-product">
                        <figure>
                            <img src="{{ product.idMedia }}" alt="{{ product.name }}">
                        </figure>
                        <div class="infos">
                            <h3>{{ product.name }}</h3>
                            <p>{{ product.idCategory.name }}</p>
                            <p class="description">{{ product.description }}</p>
                            <p class="price">{{ product.priceHT }}â‚¬</p>
                        </div>
                    </div>
                </a>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}
