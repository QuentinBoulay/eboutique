{% extends 'base.html.twig' %}

{% block title %}Adresse{% endblock %}

{% block body %}
    <style>
        .btn-black {
            display: inline-block;
            margin-top: 10px;
            margin-bottom: 30px;
        }
    </style>

    <div class="page-content container">
        {% block breadcrumb %}
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    {% for breadcrumb in breadcrumbs %}
                        <li class="breadcrumb-item"><a href="{{ path(breadcrumb.route, breadcrumb.arguments) }}">{{ breadcrumb.title }}</a><span>/</span></li>
                    {% endfor %}
                </ol>
            </nav>
        {% endblock %}

        <h1>Adresse</h1>

                <p><strong>Id : </strong>{{ customer_address.id }}</p>
                <p><strong>Type : </strong>{{ customer_address.type }}</p>
                <p><strong>Nom : </strong>{{ customer_address.name }}</p>
                <p><strong>Prénom : </strong>{{ customer_address.firstName }}</p>
                <p><strong>Téléphone : </strong>{{ customer_address.phone }}</p>
                <p><strong>Adresse : </strong>{{ customer_address.address }}</p>
                <p><strong>Cp : </strong>{{ customer_address.cp }}</p>
                <p><strong>Ville : </strong>{{ customer_address.city }}</p>
                <p><strong>Pays : </strong>{{ customer_address.country }}</p>

        <a href="{{ path('app_customer_address_edit', {'id': customer_address.id}) }}" class="btn-black">Modifier l'adresse</a>

        {{ include('customer_address/_delete_form.html.twig') }}
    </div>
{% endblock %}
