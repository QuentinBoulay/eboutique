{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="page-content container">
        <h1>Liste des produits</h1>

        <table class="table-list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix HT</th>
                    <th>Disponible</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td><img class="thumbnail" src="../uploads/{{ product.media }}" alt="{{ product.name }}"/></td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.priceHT }}</td>
                    <td>{{ product.available ? 'Oui' : 'Non' }}</td>
                    <td>
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn-gold">Voir</a>
                        <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn-gold">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun produit trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_product_new') }}" class="btn-gold">Créer un nouveau produit</a>
    </div>
{% endblock %}
